pipeline {
  agent {
    docker { image 'node:14-alpine' }
  }
    
  stages {
        
    stage('install') {
      steps {
        sh 'npm install'
      }
    }

    stage('Test') {
      steps {
        sh 'npm run test:ci'
        junit 'coverage/junit.xml'
      }
    }
     
    stage('Build') {
      steps {
        sh 'npm run build'
      }
    }  
  }
}